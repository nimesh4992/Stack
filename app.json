{
  "expo": {
    "name": "Stack",
    "slug": "stack-finance",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./frontend/assets/images/icon.png",
    "scheme": "stack",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./frontend/assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#4F46E5"
    },
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "com.habitfinance.stack",
      "buildNumber": "1",
      "infoPlist": {
        "NSCameraUsageDescription": "Scan receipts to track expenses",
        "NSPhotoLibraryUsageDescription": "Attach receipt photos to transactions"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./frontend/assets/images/adaptive-icon.png",
        "backgroundColor": "#4F46E5"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.habitfinance.stack",
      "versionCode": 1,
      "permissions": [
        "POST_NOTIFICATIONS",
        "VIBRATE",
        "WAKE_LOCK",
        "ACTIVITY_RECOGNITION"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./frontend/assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-secure-store",
      [
        "expo-notifications",
        {
          "icon": "./frontend/assets/images/notification-icon.png",
          "color": "#4F46E5"
        }
      ],
      [
        "expo-sensors",
        {
          "motionPermission": "Track steps for fitness goals"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "your-project-id"
      }
    }
  }
}
